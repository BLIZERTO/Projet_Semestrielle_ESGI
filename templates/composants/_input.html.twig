<div>
    <label for="{{ for|default('test') }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
        {% block label %}{% endblock %}
    </label>
    <input type="{{ nameandtype|default('test') }}" value="{{ last_username }}" name="{{ nameandtype|default('test') }}" id="{{ id|default('test') }}"
           class="bg-gray-100 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
           placeholder="{{ placeholder|default('test') }}" autocomplete="{{ autocomplete|default('test') }}" required autofocus>
</div>