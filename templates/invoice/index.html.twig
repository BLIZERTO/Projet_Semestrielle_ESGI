{% extends 'base.html.twig' %}

{% block title %}Invoice index
{% endblock %}

{% block body %}
	{# {% include "composants/_searchData.html.twig" with { form: form} only %} #}

	<section>
		{{ include('composants/header.html.twig') }}
		<section class="ml-64 mt-32">
 			{% include 'composants/_adminSideBar.html.twig' with {'current_page': 'invoice'} %}
			<div class='m-6'>

				<div
					class='flex items-center justify-between'
				>
					<div
						class='text-white flex'
					>
						<a class='bg-red-primary px-6 py-2 rounded-tl rounded-bl hover:bg-opacity-80 transition ease-in-out duration-100' href="{{ path('app_invoice_index') }}">Reset filtre</a>
						<a class='bg-red-primary px-6 py-2 hover:bg-opacity-80 transition ease-in-out duration-100' href="{{ path('app_invoice_index', {'typePayment': 'Espèce'}) }}">Espèce</a>
						<a class='bg-red-primary px-6 py-2 hover:bg-opacity-80 transition ease-in-out duration-100' href="{{ path('app_invoice_index', {'typePayment': 'Carte'}) }}">Carte</a>
						<a class='bg-red-primary px-6 py-2 rounded-tr rounded-br hover:bg-opacity-80 transition ease-in-out duration-100' href="{{ path('app_invoice_index', {'typePayment': 'Chèque'}) }}">Chèque</a>
					</div>
					<div class='flex items-center gap-6'>
						<div class='flex items-center bg-red-primary rounded'>
							{% include "composants/_searchData.html.twig" with { form: form} only %}
							<span class="material-symbols-outlined flex items-center justify-center w-5 h-5 text-white mr-2 p-5">search</span>
							<input class='bg-transparent text-white placeholder-white border-transparent focus:border-transparent focus:ring-0' type="text" placeholder='Search by name'>
						</div>

						<input class='bg-red-primary text-white p-2 rounded' type="date">
						
						<div class='flex gap-2 bg-blue-primary rounded p-2 pointer'>
							<span class="material-symbols-outlined flex-shrink-0 w-5 h-5 text-white">add</span>
							<a class='text-white mr-2' href="{{ path('app_invoice_new') }}">Create new</a>
						</div>
					</div>
				</div>

				{% include 'composants/_table.html.twig' with {'columns': [
						['name', 'Name', true], 
						['description', 'Description', true], 
						['price', 'Price', true], 
						['validityDate', 'Validity', true],
						['typePayment', 'Payment type', true],
						['actions', 'Actions', false] 
					], 
					'datas': invoices} 
				%}

			</div>
		</section>
	</section>

	{% endblock %}
