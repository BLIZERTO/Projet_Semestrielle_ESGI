{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <h1>Invoice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>TypePayment</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.name }}</td>
                <td>{{ invoice.description }}</td>
                <td>{{ invoice.date ? invoice.date|date('Y-m-d') : '' }}</td>
                <td>{{ invoice.typePayment }}</td>
                <td>{{ invoice.price }}</td>
                <td>
                    <a href="{{ path('app_invoice_show', {'id': invoice.id, 'idS': drivingSchool}) }}">show</a>
                    <a href="{{ path('app_invoice_edit', {'id': invoice.id, 'idS': drivingSchool}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_invoice_new', {'idS': drivingSchool}) }}">Create new</a>
{% endblock %}
