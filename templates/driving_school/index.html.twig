{% extends 'base.html.twig' %}

{% block title %}DrivingSchool index{% endblock %}

{% block body %}
    <section class="bg-gray-100 m-8 dark:bg-dark-mode-primary">
        <div class="w-full px-6 py-8 mx-auto md:h-screen lg:py-0">
            <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 xl:p-0 dark:bg-dark-mode-third dark:border-dark-mode-five">
                <div class="w-full p-6 space-y-10 md:space-y-10 sm:p-8 overflow-auto">
                    <h3 class="text-5xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Vos auto-écoles :
                    </h3>
                    <section class="flex justify-between gap-2 flex-wrap">
                        {% for driving_school in driving_schools %}
                            <div class="w-[30%] min-w-[400px] bg-white border mb-4 border-gray-200 rounded-lg shadow dark:bg-dark-mode-five dark:border-dark-mode-five">
                                <a href="#">
                                    <img class="rounded-t-lg" src="{{ asset('assets/images/driving-school.png') }}" alt=""/>
                                </a>
                                <div class="p-5 mb-4">
                                    <a href="{{ path('app_driving_school_show', {'id': driving_school.id}) }}">
                                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ driving_school.name }}</h5>
                                    </a>
                                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Adresse : {{ driving_school.address }}</p>
                                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">N° de Siret : {{ driving_school.siret }}</p>
                                    <div class="flex items-center justify-between">
                                        <a href="{{ path('app_driving_school_show', {id: driving_school.id}) }}">
                                            <button class="mt-6 flex justify-center rounded-md bg-orange-600  px-10 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 dark:bg-violet-900 dark:hover:bg-violet-800 dark:focus-visible:outline-violet-700"
                                                    type="submit">
                                                Gérer
                                            </button>
                                        </a>
                                        <a href="{{ path('app_driving_school_edit', {'id': driving_school.id}) }}">
                                            <button class="mt-6 flex w-full justify-center rounded-md bg-orange-600 px-10 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 dark:bg-violet-900 dark:hover:bg-violet-800 dark:focus-visible:outline-violet-700"
                                                    type="submit">
                                                Editer
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </section>
                    <div class="w-52">
                        <a class="text-orange-400 dark:text-indigo-400 mt-4" href="{{ path('app_driving_school_new') }}">
                            Pas d'auto-école ?
                            <button class="mt-3 flex w-full justify-center rounded-md bg-orange-600 px-10 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 dark:bg-violet-900 dark:hover:bg-violet-800 dark:focus-visible:outline-violet-700"
                                    type="submit">
                                Creer la votre
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}